<?xml version="1.0"?>
<ruleset name="Project Coding Standard">
    <description>PSR-12 coding standard for this project</description>
    
    <!-- Check these directories -->
    <file>src</file>
    <file>tests</file>
    
    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    
    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>
    
    <!-- Show progress -->
    <arg name="colors"/>
    <arg value="sp"/>
</ruleset>
