{
    "name": "bhr/router",
    "description": "A simple router for simple applications.",
    "type": "library",
    "version": "1.0",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BHR\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BHR\\": "tests/BHR/"
        }
    },
    "authors": [
        {
            "name": "Brian Reich"
        }
    ],
    "require": {
        "php": ">=8.4",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.13 || ^4.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "test:coverage:html": "XDEBUG_MODE=coverage phpunit --coverage-html build/coverage",
        "cs:check": "phpcs src/ tests/",
        "cs:fix": "phpcbf src/ tests/"
    }
}
